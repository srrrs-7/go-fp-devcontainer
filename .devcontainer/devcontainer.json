// Strategy
// - Use Dev Container Features if possible
// - Use docker-compose to launch services
// - Use Dockerfile if it needs to be cached
// - Use setup.sh to run commands that don't need to be cached
// - Use setup.personal.sh for personal setup such as dotfiles
{
  "name": "go-fp",
  "dockerComposeFile": [
    "compose.yaml",
    "compose.override.yaml"
  ],
  "service": "dev",
  "workspaceFolder": "/workspace/main",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/go": {
      "version": "1.25"
    },
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "golang.go"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "chmod +x .devcontainer/setup.sh && .devcontainer/setup.sh",
  "forwardPorts": [
    3000, // frontend dev server
    8080, // backend server
    5432, // PostgreSQL
    24282 // serena
  ]
}