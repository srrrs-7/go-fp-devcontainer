# Development Environment Configuration
#
# このファイルは Terraform 変数（リソースの設定値）を定義します。
# terraform plan/apply 時に自動的に読み込まれます。
#
# ※ backend.hcl（状態ファイルの保存先）とは用途が異なります
#
# 使い方:
#   cp terraform.tfvars.example terraform.tfvars
#   # 値を編集

project     = "myapp"
environment = "dev"
aws_region  = "ap-northeast-1"
aws_profile = "terraform"  # ~/.aws/config で設定したプロファイル名

# Domain
domain_name    = "dev.example.com"
hosted_zone_id = "Z1234567890ABC"

# Database
database_name = "myapp"

# GitHub Actions
github_repository        = "your-org/your-repo"
github_oidc_provider_arn = "arn:aws:iam::123456789012:oidc-provider/token.actions.githubusercontent.com"

# Cognito callback URLs (update for your dev environment)
cognito_callback_urls = [
  "http://localhost:3000/callback",
  "https://dev.example.com/callback"
]

cognito_logout_urls = [
  "http://localhost:3000",
  "https://dev.example.com"
]
